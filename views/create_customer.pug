extends layout

block styles
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/css/tempusdominus-bootstrap-4.min.css')

block content
  .row
    .col-md-6
      form(name='createCustomer', action='/customer/create', method='post')
        .form-group.row
          .col-sm-12
            if errors 
              ul
                for error in errors
                  li!= error.msg  
        .form-group.row
          label.col-sm-3.col-form-label(for='inputFirstName') First Name
          .col-sm-9
            input#inputFirstName.form-control(name='first_name', type='text', placeholder='First Name')
        .form-group.row
          label.col-sm-3.col-form-label(for='inputLastName') Last Name
          .col-sm-9
            input#inputLastName.form-control(name='last_name', type='text', placeholder='Last Name')
        .form-group.row
          label.col-sm-3.col-form-label(for='inputDateOfBirth') Date of birth
          .col-sm-9
            .form-group
              #datetimepicker.input-group.date(data-target-input='nearest')
                input.form-control.datetimepicker-input(name='date_of_birth', type='text', data-target='#datetimepicker')
                .input-group-append(data-target='#datetimepicker', data-toggle='datetimepicker')
                  .input-group-text
                    i.fa.fa-calendar
        .form-group.row
          label.col-sm-3.col-form-label(for='inputGender') Gender
          .col-sm-9
            .form-check.form-check-inline
              input#inputGenderMale.form-check-input(name='gender', type='radio', value='male')
              label.form-check-label(for='inputGenderMale') Male
            .form-check.form-check-inline
              input#inputGenderFemale.form-check-input(name='gender', type='radio', value='female')
              label.form-check-label(for='inputGenderFemale') Female
        .form-group.row
          label.col-sm-3.col-form-label(for='inputStatus') Status
          .col-sm-9
            select#inlineFormCustomSelect.custom-select.mr-sm-2(name='marital_status')
              option(selected='') Choose...
              option(value='single') Single
              option(value='married') Married
              option(value='divorced') Divorced
        .form-group.row
          label.col-sm-3.col-form-label(for='inputEmail') Email
          .col-sm-9
            input#inputEmail.form-control(name='contact.email',  type='email', placeholder='Enter email')
        .form-group.row
          label.col-sm-3.col-form-label(for='inputPhone') Phone
          .col-sm-9
            input#inputPhone.form-control(name='contact.phone', type='text', placeholder='Enter Phone')
        .form-group.row
          label.col-sm-3.col-form-label(for='inputAddress') Address
          .col-sm-9
            textarea#inputAddress.form-control(name='address', rows='3')
        .form-group.row
          .col-sm-9
            button.btn.btn-primary(type='submit') Create Customer

block scripts
  script(src='/javascripts/moment-with-locales.min.js')
  script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/js/tempusdominus-bootstrap-4.min.js')
  script(type='text/javascript').
    $(function () {
    $('#datetimepicker').datetimepicker({
    format: 'L'
    });
    });